{
  "name": "events-app-server",
  "version": "1.0.0",
  "description": "Events App",
  "private": true,
  "main": "index.js",
  "author": "den.milovido@gmail.com",
  "license": "ISC",
  "keywords": [],
  "scripts": {
    "build": "rimraf ./dist && npx tsc",
    "start": "npm run build && node dist/index",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint --ignore-path .eslintignore --ext .ts",
    "lint:fix": "npm run lint --fix",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+ts",
    "mongo:up": "docker compose up -d",
    "mongo:down": "docker compose down",
    "mongo:clean": "npm run mongo:down && docker volume rm server_mongo-volume"
  },
  "dependencies": {
    "@trpc/server": "^10.44.1",
    "@typegoose/typegoose": "^12.0.0",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "nodemailer": "^6.9.7",
    "papaparse": "^5.4.1",
    "swagger-ui-express": "^5.0.0",
    "trpc-openapi": "^1.2.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^18.11.9",
    "@types/nodemailer": "^6.4.14",
    "@types/papaparse": "^5.3.14",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
