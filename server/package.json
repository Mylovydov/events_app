{
  "name": "events-app-server",
  "version": "1.0.0",
  "description": "Events App",
  "type": "module",
  "private": true,
  "main": "dist/index.js",
  "author": "den.milovido@gmail.com",
  "license": "ISC",
  "keywords": [],
  "scripts": {
    "build": "rimraf ./dist && npx tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "npx nodemon",
    "lint": "eslint --ignore-path .eslintignore --ext .ts",
    "lint:fix": "npm run lint --fix",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+ts",
    "mongo:up": "docker compose up -d",
    "mongo:down": "docker compose down",
    "mongo:clean": "npm run mongo:down && docker volume rm server_mongo-volume"
  },
  "dependencies": {
    "@trpc/server": "^10.41.0",
    "@typegoose/typegoose": "^11.6.0",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.3",
    "swagger-ui-express": "^5.0.0",
    "trpc-openapi": "^1.2.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.1",
    "@types/cookie-parser": "^1.4.5",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/mongoose": "^5.11.97",
    "@types/swagger-ui-express": "^4.1.5",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
